@model BELanguageViewModel

@{
    ViewData["Title"] = "Create Language";
    //Layout = "~/Areas/Portal/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section class="content container-fluid">
    <form asp-controller="@ViewContext.RouteData.Values["controller"].ToString()"
          asp-action="@ViewContext.RouteData.Values["action"].ToString()">
        @await Html.PartialAsync("EditableSides/_Editable_ActionsBar")
        <div class="row">

            <section class="col-lg-9">
                @await Html.PartialAsync("_Editable_Language", Model)
            </section>
            <section class="col-lg-3">
                @await Html.PartialAsync("EditableSides/_EditableSide_Actions", Model)
                @await Html.PartialAsync("EditableSides/_EditableSide_Cultures", Model.ListSupportedCulture)
            </section>
        </div>
    </form>
</section>
<!-- /.content -->
