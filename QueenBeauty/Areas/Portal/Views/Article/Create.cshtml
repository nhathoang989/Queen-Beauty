@model BEArticleViewModel

@{
    ViewData["Title"] = "Create Article";
    //Layout = "~/Areas/Portal/Views/Shared/_Layout.cshtml";
    string img = Model != null ? Model.ImageUrl : "http://placehold.it/200x200";
}

@section Styles
    {
}

<!-- Main content -->
<section class="content container-fluid">
    <form asp-action="@ViewContext.RouteData.Values["action"].ToString()"
          asp-route-categoryId="@ViewBag.categoryId"
          enctype="multipart/form-data">

        @await Html.PartialAsync("EditableSides/_Editable_ActionsBar")
        <div class="row">
            <section class="col-lg-9">
                @await Html.PartialAsync("_Editable", Model)
            </section>
            <section class="col-lg-3">
                @await Html.PartialAsync("_EditableSide", Model)
            </section>
        </div>
    </form>
</section>
<!-- /.content -->
<!-- /.box-body -->

@section Scripts{

}

@section Modals{
    <div class="modal fade" id="modal-data">
        <div class="modal-dialog modal-lg">
            <form id="frm-data" asp-controller="Module" asp-action="AjaxSaveModuleData">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Edit</h4>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-default pull-left" data-dismiss="modal">Close</a>
                        <a class="btn btn-primary btn-save-data">Save changes</a>
                    </div>
                </div>
                <!-- /.modal-content -->
            </form>
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
}
