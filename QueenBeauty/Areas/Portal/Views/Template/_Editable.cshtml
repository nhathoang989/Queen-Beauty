                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="CreatedDateTime" />
                <input type="hidden" asp-for="TemplateId" />
                <input type="hidden" asp-for="TemplateName" />
                <input type="hidden" asp-for="FileFolder" />
                <input type="hidden" asp-for="Extension" />
                <input type="hidden" asp-for="LastModified" />

                <div class="form-group">
                    <label asp-for="AssetFolder" class="control-label">Asset folder path</label>
                    <input asp-for="AssetFolder" onclick="this.select()" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="TemplateFolder" class="control-label">Template folder path</label>
                    <input asp-for="TemplateFolder" onclick="this.select()" class="form-control" readonly />
                </div>
