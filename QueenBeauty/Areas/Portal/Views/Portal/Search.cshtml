@using Swastika.Cms.Lib.ViewModels.Info
@using Swastika.Cms.Lib.ViewModels
@{
    ViewData["Title"] = "Search Result";
    //Layout = "~/Areas/Portal/Views/Shared/_Layout.cshtml";
    var articles = (List<InfoArticleViewModel>)ViewData["Articles"];
    var pages = (List<Swastika.Cms.Lib.ViewModels.Info.InfoCategoryViewModel>)ViewData["Pages"];
    var modules = (List<Swastika.Cms.Lib.ViewModels.Info.InfoModuleViewModel>)ViewData["Modules"];

    articles = articles ?? new List<InfoArticleViewModel>();
    pages = pages ?? new List<Swastika.Cms.Lib.ViewModels.Info.InfoCategoryViewModel>();
    modules = modules ?? new List<Swastika.Cms.Lib.ViewModels.Info.InfoModuleViewModel>();
}

@if (articles.Count > 0)
{

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@Swastika.Cms.Lib.Services.GlobalConfigurationService.Instance.GetLocalString("Articles", ViewBag.culture)</h3>
            @*<div class="box-tools">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>*@
        </div>
        <div class="box-body">
            <table class="table table-sm " cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">
                            Title
                        </th>
                        <th scope="col">
                            Excerpt
                        </th>
                        <th scope="col">
                            Type
                        </th>
                        <th scope="col" width="10%">
                            Created By
                        </th>
                        <th scope="col" width="5%">
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in articles)
                    {
                        <tr>
                            <td>
                                <small>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </small>
                            </td>
                            <td>
                                <small>
                                    @Html.Raw(item.Excerpt)
                                </small>
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>

                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                    <a asp-controller="Articles" asp-action="Edit" asp-route-id="@item.Id" asp-route-categoryId="@ViewBag.categoryId"
                                       class="btn btn-sm btn-light  d-inline-block "><span class="fas fa-pencil-alt text-primary"></span></a>
                                    <a asp-area="" asp-controller="Home" asp-action="ArticleDetails" asp-route-id="@item.Id" asp-route-SeoName="@item.SeoName"
                                       target="_blank" class="btn btn-sm btn-light "><span class="fas fa-eye text-secondary"></span></a>
                                    <a asp-controller="Articles" asp-action="Recycle" asp-route-id="@item.Id" class="btn btn-sm btn-light d-inline-block" data-popout="true" data-toggle="confirmation" data-singleton="true">
                                        <span class="fas fa-times text-danger"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

                <tbody></tbody>
            </table>
        </div>
    </div>

}
@if (pages.Count > 0)
{
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@Swastika.Cms.Lib.Services.GlobalConfigurationService.Instance.GetLocalString("Pages", ViewBag.culture)</h3>
            <div class="box-tools">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-sm" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th scope="col"></th>
                        <th class="col-md-3">
                            Title
                        </th>
                        <th class="col-md-4">
                            Description
                        </th>
                        <th scope="col">
                            Type
                        </th>
                        <th scope="col" width="10%">
                            Created By
                        </th>
                        <th scope="col">
                            Priority
                        </th>
                        <th scope="col" width="5%">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in pages)
                    {
                        <tr>
                            <td><input type="checkbox"></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.Raw(item.Excerpt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Priority)
                            </td>
                            <td>
                                <a asp-controller="Pages" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light"> <span class="fas fa-pencil-alt text-primary"></span></a>
                                <a asp-controller="Pages" asp-area="" asp-controller="Home" asp-action="Home" asp-route-pageName="@item.SeoName"
                                   target="_blank" class="btn btn-sm btn-light"><span class="fas fa-eye text-secondary"></span></a>
                                <a asp-controller="Pages" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light" data-popout="true" data-toggle="confirmation" data-singleton="true"> <span class="fas fa-times text-danger"></span> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (modules.Count > 0)
{
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@Swastika.Cms.Lib.Services.GlobalConfigurationService.Instance.GetLocalString("Modules", ViewBag.culture)</h3>
            <div class="box-tools">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages" style="height:500px;">
                <table class="table table-sm" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">
                                Name
                            </th>
                            <th scope="col">
                                Template
                            </th>
                            <th scope="col">
                                Title
                            </th>
                            <th scope="col">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in modules)
                        {
                            <tr>
                                <td><input type="checkbox"></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.Raw(item.Template)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    <a asp-controller="Module" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light"> <span class="fas fa-pencil-alt"></span></a>
                                    <a asp-controller="Module" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-light"><span class="fas fa-eye text-secondary"></span></a>
                                    <a asp-controller="Module" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light" data-popout="true" data-toggle="confirmation" data-singleton="true" data-btn-ok-class="btn-danger btn-sm" data-btn-cancel-class="btn-success btn-sm" data-content="This can be undo!"> <span class="fas fa-times text-danger"></span> </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table -->
            </div>
        </div>
    </div>
}
