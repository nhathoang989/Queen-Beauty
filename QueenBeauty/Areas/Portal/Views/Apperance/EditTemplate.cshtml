@model Swastika.Cms.Lib.ViewModels.TemplateViewModel
@{
    ViewData["Title"] = "Template - " + Model.FileFolder;
    //Layout = "~/Areas/Portal/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section class="content container-fluid">
    <form asp-controller="@ViewContext.RouteData.Values["controller"].ToString()"
          asp-action="@ViewContext.RouteData.Values["action"].ToString()"
          asp-route-folder="@ViewBag.folder"
          asp-route-name="@Model.Filename">
        <div class="row" style="position:relative;">
            <section class="col-lg-9">
                @await Html.PartialAsync("_Editable_Template", Model)
            </section>
            <section class="col-lg-3 edit-side">
                @await Html.PartialAsync("EditableSides/_EditableSide_Actions")
            </section>
        </div>
    </form>
</section>
