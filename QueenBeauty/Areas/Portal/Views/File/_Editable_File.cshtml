@model FileViewModel

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@ViewData["Title"]</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-horizontal">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Extension" />
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label asp-for="Filename" class="control-label"></label>
                </div>

                <div class="col-md-10">

                    @Html.Partial("_Editor_Code_File", Model, new ViewDataDictionary(this.ViewData)
               {
               {
                       "Files", null
                   },
                   {
                       "Name", ""
                   }

                })
                    @* <input asp-for="View.Filename" class="form-control" />

                        <div class="form-control" id="code-editor" asp-for="View.Content"></div>*@
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>
