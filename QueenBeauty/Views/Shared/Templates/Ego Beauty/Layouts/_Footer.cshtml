@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    List<InfoCategoryViewModel> cates = SwCmsHelper.GetCategory(Url, ViewBag.culture, SWCmsConstants.CatePosition.Footer, Context.Request.Path);
}
<footer>
	<div class="container_12">
		<div class="grid_12">
			<ul>
				@foreach (var cate in cates.OrderBy(c => c.Priority))
                {
                    <li>
                        <a href="@cate.Href">
                            @cate.Title
                        </a>
                    </li>
                }
			</ul>
			<div class="clear"></div>
			<div class="socials">
				<a href="#"><span class=" fa-twitter fa"></span></a>
				<a href="#"><span class="fa fa-facebook"></span></a>
				<a href="#"></a>
			</div>
			<div class="copy">
				Ego (C) <span id="copyright-year"></span> | <a href="#">Privacy Policy</a> | Website Template Designed by <a href="http://www.templatemonster.com/" rel="nofollow">TemplateMonster.com</a>
			</div>
		</div>
		<div class="clear"></div>
	</div>
</footer>
